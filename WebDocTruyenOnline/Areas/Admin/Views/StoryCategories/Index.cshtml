@model IEnumerable<WebDocTruyenOnline.Models.StoryCategory>

@{
    ViewBag.Title = "Quản lí";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh mục truyện
}


<p>
    @Html.ActionLink("Tạo mới", "Create")   |     @Html.ActionLink("Xóa nhiều mục", "MultiDelete")
</p>
<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "StoryCategories", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DisplayOrder)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreateBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModifyDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModifyBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.Id">

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                  
                                    <th>
                                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                                    </th>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModifyDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModifyBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                                       @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                                  {
                                      Confirm = "Bạn có chắc chắn xóa",
                                      OnComplete = "$('#row_" + @item.Id + "').remove()",
                                      HttpMethod = "Delete"
                                  })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>