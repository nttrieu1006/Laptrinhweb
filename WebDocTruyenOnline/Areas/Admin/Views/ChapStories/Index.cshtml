@model IEnumerable<WebDocTruyenOnline.Models.ChapStory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Quản lý truyện
}

<p>
    @Html.ActionLink("Tạo mới", "Create")   |     @Html.ActionLink("Xóa nhiều mục", "MultiDelete")
</p>


<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Story.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Chap)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MetaTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ChapName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreateBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModifyDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModifyBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.Id">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Story.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Chap)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MetaTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChapName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModifyDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModifyBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có chắc chắn xóa",
                                       OnComplete = "$('#row_" + @item.Id + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
