@model IEnumerable<WebDocTruyenOnline.Models.ChapStory>

@{
    ViewBag.Title = "Xóa nâng cao";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Xóa nâng cao
}

<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Story.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Chap)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MetaTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreateBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModifyDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModifyBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @using (Html.BeginForm("MultiDelete", "ChapStories", FormMethod.Post))
            {
                foreach (var item in Model)
                {
                                    <tr id="row_@item.Id">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Story.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Chap)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MetaTitle)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Content)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateBy)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModifyDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModifyBy)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td><input type="checkbox" class="chkId" name="chkId" value="@item.Id" /></td>
                                    </tr>
                                }
                                <button style="float:right" type="submit">Xóa cá mục đã chọn</button>
                            }

                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
